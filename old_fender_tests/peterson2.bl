shared flag0, flag1, turn;
local f, t;

init
1: store turn  = 0;

process 0
1: store flag0 = 1;
100: barrier;
2: store turn = 1;
101: barrier;
3: load f = flag1;
4: load t = turn;
5: if f == 0 goto 8;
6: if t == 0 goto 8;
7: if true goto 3;
8: nop;
9: store flag0 = 0;
10: if true goto 1;

process 1
1: store flag1 = 1;
100: barrier;
2: store turn = 0;
101: barrier;
3: load f = flag0;
4: load t = turn;
5: if f == 0 goto 8;
6: if t == 1 goto 8;
7: if true goto 3;
8: nop;
9: store flag1 = 0;
10: if true goto 1;